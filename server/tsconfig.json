{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@graphql/*": [
                "./graphql/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@validation/*": [
                "./validation/*"
            ],
            "@middleware/*": [
                "./middleware/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}